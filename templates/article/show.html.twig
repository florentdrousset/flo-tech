{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="section">
        <div class="container">
            <h1 class="title">{{ article.title }}</h1>
            <div class="box">
                <div class="content">
                    <div>{{ article.content|raw }}</div>
                </div>
                <div class="content">
                    <h3 class="subtitle">Date</h3>
                    <p>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</p>
                </div>
            </div>
            <div class="buttons">
                <a href="{{ path('app_article_index') }}" class="button is-info">Back to list</a>
                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="button is-warning">Edit</a>
                <form action="{{ path('app_article_delete', {'id': article.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this article?');" style="display: inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                    <button class="button is-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
