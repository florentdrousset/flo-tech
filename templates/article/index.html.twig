{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="main-container m-auto">
        <h1 class="main-title columns is-centered container m-3">
            Articles
        </h1>

        {% for article in articles %}
            <div class="card m-5">
                <div class="card-content">
                    <h2 class="title is-4"><a href="{{ path('app_article_show', {'id': article.id}) }}">{{ article.title }}</a></h2>
                    <p class="subtitle is-6">{{ article.date|date('d-m-Y') }}</p>
                    <p>{{ article.content }}</p>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
