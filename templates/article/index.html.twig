{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="section">
    <h1 class="title is-3">All articles</h1>

        {% for article in articles %}
            <div class="card m-5">
                <div class="card-content">
                    <h2 class="title is-4">{{ article.title }}</h2>
                    <p class="subtitle is-6">{{ article.date|date('d-m-Y') }}</p>
                    <p>{{ article.content }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
